<% provide(:title, 'ユーザーを探す') %>

<article class="users inner">
  <h1>ユーザーを探す</h1>
  <h4 class="sub-title">条件設定</h4>

  <div class="search-form">
    <%= render 'search' %>
  </div>

  <ul>
    <% if @user.present? %>
      <% @user.each do |user| %>
        <%= render user %>
      <% end %>
    <% else %>
      <p>検索結果はありません</p>
    <% end %>
  </ul>
</article>

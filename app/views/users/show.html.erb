<% provide(:title, @user.name) %>
<%= @user.name %>
<% if @user.avatar? %>
  <%= image_tag @user.avatar.variant(resize: '200x200') %>
<% else %>
  <%= image_tag ("sample_user"), style: 'width: 200px;' %>
<% end %>
<%= render 'shared/stats' %>
<%= render 'follow_form' if logged_in? %>
<% if current_user != @user %>
  <%= link_to 'チャット', chat_path(@user.id) %>
<% end %>

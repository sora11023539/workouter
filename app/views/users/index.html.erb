<% provide(:title, 'ユーザーを探す') %>

<article class="users inner">
  <h1>ユーザーを探す</h1>
  <h4 class="sub-title">条件設定</h4>
  <%= search_form_for @q do |f| %>
    <dl>
      <dt><%= f.label :address, "居住地" %></dt>
      <dd><%= f.select :address_eq, User.addresses.keys %></dd>
    </dl>
    <dl>
      <dt><%= f.label :gender, "性別" %></dt>
      <dd><%= f.select :gender_eq, User.genders.keys %></dd>
    </dl>
    <%= f.submit "この条件で検索", class: 'btn-blue' %>
  <% end %>

  <ul>
    <% @users.each do |user| %>
      <%= render user %>
    <% end %>
  </ul>
</article>

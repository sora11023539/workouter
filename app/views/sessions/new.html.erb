<% provide(:title, "ログイン") %>

<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :remember_me do %>
    <%= f.check_box :remember_me %>
    <span>パスワードを保存する</span>
  <% end %>

  <%= f.submit "ログイン" %>
<% end %>

<%= link_to "アカウント登録", signup_path %>

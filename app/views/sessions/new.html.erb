<% provide(:title, "ログイン") %>

<article class="login inner">
  <h1>ログイン</h1>

  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <dl>
      <dt><%= f.label :email, "メールアドレス" %></dt>
      <dd><%= f.text_field :email %></dd>
    </dl>
    <dl>
      <dt><%= f.label :password, "パスワード" %></dt>
      <dd><%= f.password_field :password %></dd>
    </dl>

    <div class="remember-me">
      <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>パスワードを保存する</span>
    </div>
    <% end %>

    <%= f.submit "ログイン", class: 'btn-green' %>
  <% end %>

  <div><%= link_to "アカウント登録", signup_path, class: 'link-blue' %></div>
  <div><%= link_to "(パスワードをお忘れの方)", new_password_reset_path, class: 'link-blue' %></div>
</article>
